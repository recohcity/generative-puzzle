# Snyk Configuration for Quality System Integration
# This file configures Snyk security analysis for the quality improvement system

# Language settings
language-settings:
  javascript:
    # Include dev dependencies in scan
    includeDevDeps: false
    # Yarn workspaces support
    yarnWorkspaces: false

# Patch settings
patch:
  # Disable automatic patching
  'npm:*':
    patched: false

# Ignore specific vulnerabilities (use with caution)
ignore:
  # Example: Ignore a specific vulnerability in a dev dependency
  # 'SNYK-JS-LODASH-567746':
  #   - '*':
  #       reason: 'Used only in development environment'
  #       expires: '2024-12-31T23:59:59.999Z'

# File exclusions
exclude:
  # Exclude test files from security analysis
  global:
    - '**/*.test.ts'
    - '**/*.spec.ts'
    - '**/test/**'
    - '**/tests/**'
    - '**/examples/**'
    - '**/demo/**'
    - '**/coverage/**'
    - '**/dist/**'
    - '**/node_modules/**'

# Severity threshold
# Options: low, medium, high, critical
severity-threshold: medium

# Fail on vulnerabilities
fail-on: upgradable

# Monitor settings
monitor: true

# Organization settings (set via environment variable)
# org: your-org-name

# Project settings
project-name: quality-improvement-system

# Docker settings (if applicable)
# docker:
#   dockerfile-path: Dockerfile
#   exclude-base-image-vulns: false

# Infrastructure as Code settings
# iac:
#   rules:
#     - rule-id: SNYK-CC-K8S-1
#       severity: medium